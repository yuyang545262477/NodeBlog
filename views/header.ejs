<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>NodeBlog</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
<header>
    <h1><%= title %></h1>
</header>
<nav>
    <span> <a href="/" title="主页">Home</a></span>
    <% if (user) { %>
    <span><a href="/post" title="发表">post</a></span>
    <span><a href="/logout" title="登出">logout</a></span>
    <% }else{ %>
    <span><a href="/login" title="登录">login</a></span>
    <span><a href="/reg" title="注册">registered</a></span>
    <% } %>
</nav>
<article>
    <% if(success){ %>
    <div><%= success %></div>
    <% } %>
    <% if (error){ %>
    <div><%= error %></div>
    <% } %>
